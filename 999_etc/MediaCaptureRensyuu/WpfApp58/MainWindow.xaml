            <Button Height="100" Content="カメラデバイス列挙" Click="Button_Click"/>
            <Button Height="100" Content="キャプチャスタート" Click="Button_Click_2"/>
            <Button Height="100" Content="撮影" Click="Button_Click_1"/>

        </StackPanel>
        <Image Name="PreviewFrameImage" Grid.Column="2"/>
